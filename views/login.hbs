<form action="/login" method="post"> 
     <div>
         <h1>Login</h1>
     </div>
     <div class="form-group">
         <label>User name: </label>
         <input 
            type="text" 
            name="Username" 
            id="Username" 
            placeholder="Enter your username" 
            required />
     </div>
     <div class="form-group">
         <label>password: </label>
         <input 
            type="password" 
            name="password" 
            id="password" 
            placeholder="Enter your password" 
            required />
     </div>
     <input type="submit" value="Login" />
     <a href="/register" class="register-link">Don't have an account register instead?</a>
     
</form>

